<p style="color: green"><%= notice %></p>

<h1>New result</h1>

<%= link_to "Back to Home", root_path %>

<br> <br>

<%= render "form", result: @result %>

<br>

<div>
<table>
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Student Name</th>
      <th>Grade</th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.course.name %></td>
        <td><%= result.student.full_name %></td>
        <td><%= result.score %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
