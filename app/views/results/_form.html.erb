<%= form_with(model: result) do |form| %>
  <% if result.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
        <% result.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :course_id, style: "display: block" %>
    <%= form.select(:course_id, options_from_collection_for_select(Course.all, 'id', 'name'), :prompt => 'Course Name...') %>
  </div>

  <div>
    <%= form.label :student_id, style: "display: block" %>
    <%= form.select(:student_id, options_from_collection_for_select(Student.all, 'id', 'full_name'), :prompt => 'Student Name...') %>
  </div>

  <div>
    <%= form.label :score, style: "display: block" %>
    <%= form.select(:score, options_for_select(['A', 'B', 'C', 'D', 'E', 'F']), :prompt => 'Grade...') %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
