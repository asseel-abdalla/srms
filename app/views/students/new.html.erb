<p style="color: green"><%= notice %></p>
<h1>New student</h1>

<%= render "form", student: @student %>

<br>

<div id="students">
  <table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Family Name</th>
      <th>Date of Birth</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.date_of_birth %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>